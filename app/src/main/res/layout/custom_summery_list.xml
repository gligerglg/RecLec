<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Subject"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_subject"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:text="Total Attendance"
            android:textColor="@android:color/holo_green_light"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_subject"
            android:layout_marginLeft="120dp"
            android:text="TextView"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:text="Total Days"
            android:textColor="@android:color/holo_green_light"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/textView5"
            android:text="TextView"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/txt_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_toEndOf="@+id/txt_tot"
            android:text="Average"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_avg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="100"
            android:maxHeight="25dip"
            android:minHeight="25dip" />

    </RelativeLayout>

</LinearLayout>